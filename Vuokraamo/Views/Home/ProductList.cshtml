@model List<Product>
@{ int id = ViewBag.number;}

<div class="row">

    @foreach (var product in Model)
    {
    <div class="col-4">
        <h3 style="text-align: center">@Html.ActionLink(@product.Name, "Details", new { id = product.Id })</h3> Hinta: @product.Price €
        @if (product.ImageUrl == null)
        {
            <img class="img-fluid" src="~/images/default-product-image.png" />
        }
        else
        {
            <img class="img-fluid" src="~/images/@product.ImageUrl" />

        }

    </div>

    }
</div>
@if(id >= 1)
            {
    @Html.ActionLink("Edellinen", "ProductList", new { number = id - 1 })
            }
    @Html.ActionLink("Seuraava", "ProductList", new { number = id + 1 })
