@model List<Rental>

<h1><b>Vuokraustiedot</b></h1>
<br /><br />
<h3>Voimassa olevat vuokraukset</h3>
<table width="100%" , border="1">
    <tr>
        <th><b>Vuokraus ID</b></th>
        <th><b>Tuote</b></th>
        <th><b>Hinta</b></th>
        <th><b>Vuokrauspäivä</b></th>
        <th><b>Palautuspäivä</b></th>
    </tr>
    @foreach (var i in Model)
    {
        if (i.Returndate > DateTime.Now)
        {
            <tr>
                <td>@i.RentalId</td>
                <td>@i.Product.Name</td>
                <td>@i.Price</td>
                <td>@i.Rentaldate.ToShortDateString()</td>
                <td>@i.Returndate.ToShortDateString()</td>
                <td>@Html.ActionLink("Palauta", "PalautaTuote", new {Id = i.RentalId})</td>
            </tr>
        }
        else if (Model.Count == 0)
        {
            <p><em>Ei voimassa olevia vuokrauksia</em></p>
        }
    }
</table>
